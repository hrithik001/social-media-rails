<div class="card">
  <div class="card-body">
   <h3><strong><%= @post.title %></strong></h3> 
   <p><%= @post.content %></p>
  </div>
</div>

<h5 class="mt-2">Comments</h5>

<div id="new-comment">
  <%= form_with(model: [@post, Comment.new], local: false) do |form| %>
    <div class="form-group">
      <%= form.text_area :content, class: 'form-control', placeholder: 'Add a public comment...' %>
    </div>
    <%= form.submit 'Comment', class: 'btn btn-primary mt-2' %>
  <% end %>
</div>

<div id="comments" class="card mb-4 mt-4">
  <%= render partial: 'comments/comment', collection: @post.comments.where(parent_id: nil), as: :comment %>
</div>
